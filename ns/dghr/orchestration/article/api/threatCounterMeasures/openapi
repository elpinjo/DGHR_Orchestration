  /article/find/{activeIngredient}:
    summary: Find article active Ingredient
    description: ""
    get:
      tags:
      - mcm
      summary: Find an article based on active ingredient
      operationId: findArticleByActiveIngredient
      parameters:
      - name: activeIngredient
        in: path
        required: true
        style: simple
        explode: false
        schema:
          type: string
        example: "Castor Oil, Virgin"
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  article:
                    type: array
                    items:
                      $ref: '#/components/schemas/Article'
