  /threat/{id}/counterMeasures:
    summary: Threat Counter measures
    description: Counter Measures applicable for a threat
    get:
      tags:
      - mcm
      description: "This operation will retrieve the counter measures for a threat\
        \ along with the availability of them. \nIt uses sources like EMA Articles57,\
        \ a HERA legacy substances database on-premises and Eurostat for beds availability"
      operationId: getCounterMeasuresForThreat
      parameters:
      - name: id
        in: path
        description: Identifier of the threat
        required: true
        style: simple
        explode: false
